<div class="container" style="background:#eee; height: 1000px">
<h1>Namma Pandavapura</h1>
    <div class="header-border border_position"></div>
	<div class="creat_school_btn">
		<a class="btn btn-primary" href="/schools/new" type="submit">
			Create New School
		</a>
	</div>
	<h2>List of Schools</h2>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th class="entry-num">School Name</th>
				<th class="date">Type</th>
				<th class="name">Adress</th>
				<th class="action">Action</th>
			</tr>
		</thead>
		<tbody class="table-body-background change-font">
			<% @school.each do |scl|%>
			<tr class="">
				<td><%= scl.name %></td>
				<td><%= scl.type %></td>
				<td><%= scl.address %></td>
				<td>
					<%= link_to image_tag("icon-edit.png"), edit_school_path(scl.id), :title => "Edit", 'data-no-turbolink' => true %>
					
					<%= link_to image_tag("icon-deleted.png"), school_path(scl.id), method: :delete, data: {confirm: 'Are u sure'}, :title => "Delete"  %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<a class="btn btn-primary" href="/" type="cancel">
		Back
	</a>
	<a onclick="javascript:print(); return false;" href="#" class="btn btn-primary"><span class=""></span>&nbsp;Print
    </a>
</div>